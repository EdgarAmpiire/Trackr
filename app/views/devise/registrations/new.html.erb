<div class="min-h-screen bg-gray-100 flex flex-col items-center justify-items-start px-4">
  <!-- Logo (outside card) -->
  <div class="-mb-16 -mt-20">
    <%= image_tag "trackr.png", alt: "Trackr Logo", class: "h-60 w-auto drop-shadow-lg" %>
  </div>

  <!-- Sign Up Card -->
  <div class="w-full max-w-md bg-white p-6 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-bold text-center mb-5 text-gray-800">Create your Trackr account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :first_name, class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, class: "w-full p-2.5 border border-gray-300 rounded-md focus:ring-green-600 focus:border-green-600 text-sm" %>
      </div>

      <div class="mb-3">
        <%= f.label :last_name, class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, class: "w-full p-2.5 border border-gray-300 rounded-md focus:ring-green-600 focus:border-green-600 text-sm" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "w-full p-2.5 border border-gray-300 rounded-md focus:ring-green-600 focus:border-green-600 text-sm" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "block mb-1 text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 w-full p-2.5 border border-gray-300 rounded-md focus:ring-green-600 focus:border-green-600 text-sm" %>
      </div>

      <div class="mb-5">
        <%= f.label :password_confirmation, class: "block mb-1 text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2.5 border border-gray-300 rounded-md focus:ring-green-600 focus:border-green-600 text-sm" %>
      </div>

      <div>
        <%= f.submit "Sign up",
              class: "w-full bg-green-600 text-white py-2.5 rounded-md hover:bg-green-700 font-semibold text-sm transition" %>
      </div>
    <% end %>

    <p class="mt-5 text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Log in", new_session_path(resource_name),
            class: "text-green-600 font-semibold hover:underline" %>
    </p>
  </div>
</div>
