<div id="<%= dom_id(comment) %>" class="bg-gray-50 border border-gray-200 rounded p-3 mb-2">
  <p class="font-semibold"><%= comment.user.email %>:</p>
  <p><%= comment.content %></p>
  <% if comment.user == current_user %>
    <%= link_to "Delete", [comment.task, comment], data: { turbo_confirm: "Delete comment?" }, method: :delete, class: "text-red-500 text-sm" %>
  <% end %>
</div>
