<%= form_with(model: [task, comment], data: { turbo_stream: true }, class: "mt-4") do |form| %>
  <%= form.text_area :content, class: "w-full border border-gray-200 focus:border-green-500 focus:ring focus:ring-green-100 p-2 rounded-lg", placeholder: "Add a comment..." %>
  <%= form.submit "Post", class: "cursor-pointer bg-green-600 text-white px-3 py-1 rounded mt-2" %>
<% end %>
