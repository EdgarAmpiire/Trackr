<div class="max-w-3xl mx-auto mt-6">
  <!-- Back Button -->
  <%= link_to tasks_path, class: "inline-flex items-center gap-2 text-gray-600 hover:text-green-600 font-medium transition-all duration-200 mb-6" do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
         viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Tasks
  <% end %>

  <div class="bg-white rounded-2xl shadow-md p-6 border border-gray-100">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Edit Task</h2>

    <%= form_with model: @task, local: true, class: "space-y-6" do |f| %>
      <!-- Title Field -->
      <div>
        <%= f.label :title, class: "block font-semibold mb-2 text-gray-700" %>
        <%= f.text_field :title, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-200" %>
      </div>

      <!-- Description Field -->
      <div>
        <%= f.label :description, class: "block font-semibold mb-2 text-gray-700" %>
        <%= f.text_area :description, class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 transition-all duration-200", rows: 5 %>
      </div>

      <!-- Buttons -->
      <div class="flex gap-3">
        <%= f.submit "Update Task", class: "cursor-pointer bg-green-600 text-white px-5 py-2 rounded-lg font-semibold hover:bg-green-700 transition-colors duration-200 shadow" %>
        <%= link_to "Cancel", tasks_path, class: "cursor-pointer bg-gray-200 text-gray-700 px-5 py-2 rounded-lg font-semibold hover:bg-gray-300 transition-colors duration-200 shadow" %>
      </div>
    <% end %>
  </div>
</div>
