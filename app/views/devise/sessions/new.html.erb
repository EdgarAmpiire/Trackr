<h2 class="text-3xl font-extrabold text-center text-gray-900 mb-6">Log in to Your Account</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <div class="bg-white p-8 rounded-lg shadow-lg max-w-md mx-auto space-y-6">
    <!-- Email Field -->
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500 focus:ring-1 sm:text-sm" %>
    </div>

    <!-- Password Field -->
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500 focus:ring-1 sm:text-sm" %>
    </div>

    <!-- Remember Me Checkbox -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div>
      <%= f.submit "Log in", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-200" %>
    </div>

    <!-- Forgot Password -->
    <% if devise_mapping.recoverable? %>
      <div class="text-sm text-right mt-2">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-green-600 hover:text-green-500" %>
      </div>
    <% end %>
  </div>

  <!-- Registration Link -->
  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      Don't have an account?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-green-600 hover:text-green-500" %>
    </p>
  </div>
<% end %>

